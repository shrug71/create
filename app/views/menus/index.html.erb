      <div class="container">
        <div class="jumbotron">

          <h1 class="display-4">Menu</h1>
           <% if @cafe %>
            <h1><%= @cafe.name %></h1>
          <% end %>
          <%= link_to 'Create Menu', new_menu_path, class: "btn btn-success" %>
        </div>
         <% if @menus.present? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <!--<th>Menu Name</th>
                  <th>Price</th>
                 
                </tr>
              </thead>
              <tbody>
                <%# @menus.each do |menu| %>
                  <tr>
                    <td><%#= menu.name %></td>
                    <td>$<%#= menu.price %></td>-->
                    
                  </tr>
                <% #end %>
              </tbody>
            </table>
          </div>
        <%# else %>
          <div>
            <!--No menu available for this cafe.-->
          </div>
        <% end %>
        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @menus&.each do |menu| %>
                <tr>
                  <td><%= menu.name %></td>
                  <td>$<%= menu.price %></td>
                  <td>
                  
                    <%= link_to "Edit", edit_menu_path(menu), class: "btn btn-secondary btn-sm" %>
                  <br>

                   <%= link_to "Destroy", menu_path(menu.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %>


                  </td>
                </tr>
              <% end %>
              <%= link_to "Back", cafes_path, class: "btn btn-secondary" %>
            </tbody>
          </table>
        </div>
      </div>
      <style>
        body {
          padding: 20px;
          background-color: #f8f9fa; /* Light gray background */
        }

        .jumbotron {
          background-color: #ffee58; /* Yellow jumbotron background */
          padding: 20px;
          border-radius: 10px;
          margin-bottom: 20px;
          text-align: center;
        }

        .table {
          width: 100%;
          background-color: #ffffff; /* White table background */
          border-radius: 10px;
        }

        .table th, .table td {
          text-align: center;
          vertical-align: middle;
        }

        .table th {
          background-color: #343a40; /* Dark gray header */
          color: #ffffff;
        }

        .table-striped tbody tr:nth-of-type(odd) {
          background-color: rgba(0, 0, 0, 0.05); /* Light gray stripe */
        }

        .table-hover tbody tr:hover {
          background-color: rgba(0, 0, 0, 0.075); /* Slightly darker gray on hover */
        }

        .btn {
          padding: 6px 12px;
          font-size: 14px;
          border-radius: 5px;
          cursor: pointer;
        }

        .btn-success {
          background-color: #28a745; /* Green */
          border-color: #218838;
          color: #ffffff;
        }

        .btn-success:hover {
          background-color: #218838; /* Darker green on hover */
          border-color: #1e7e34;
        }

        .btn-danger {
          background-color: #dc3545; /* Red */
          border-color: #c82333;
          color: #ffffff;
        }

        .btn-danger:hover {
          background-color: #c82333; /* Darker red on hover */
          border-color: #bd2130;
        }

        .btn-primary {
          background-color: #007bff; /* Blue */
          border-color: #007bff;
          color: #ffffff;
        }

        .btn-primary:hover {
          background-color: #0056b3; /* Darker blue on hover */
          border-color: #0043a6;
        }

        .btn-sm {
          padding: 3px 10px;
          font-size: 12px;
        }

      </style>







