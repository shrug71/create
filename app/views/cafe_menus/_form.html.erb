<%= form_with(model: @cafe_menu, local: true) do |form| %>
  <div class="container">
    <% if @cafe_menu.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@cafe_menu.errors.count, "error") %> prohibited this cafe menu from being saved:</h2>

        <ul>
          <% @cafe_menu.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :cafe_id, 'Cafe' %>
      <%= form.collection_select :cafe_id, Cafe.all, :id, :name, { prompt: 'Select a cafe' }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :menu_id, 'Menu' %>
      <%= form.collection_select :menu_id, Menu.all, :id, :name, { prompt: 'Select a menu' }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
